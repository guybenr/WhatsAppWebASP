@model List<Review>

<!-- Add icon library -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/StyleSheetHome.css">



<div>
	<img class="iconStar" src=~/css/R.png />
	<span class="heading">User Rating</span>
	<p class="underHeading">Average Reating</p>
	<hr style="border:3px solid #f1f1f1">

	<div class="row">
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-5"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-4"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-3"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-2"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-1"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="average">
			4.8
			<div class="row row-cols-auto">
				<img class="col, averageIcon" src=~/css/R.png />
				<img class="col, averageIcon" src=~/css/R.png />
				<img class="col, averageIcon" src=~/css/R.png />
				<img class="col, averageIcon" src=~/css/R.png />
				<img class="col, averageIcon" src=~/css/R.png />
			</div>
			<span class="reviews">Reviews</span>
		</div>
		<ul class="listReviews">
			@foreach (Review review in Model)
			{
				<li>
					<div class="container">
						<div class="row">
							<div class="col-4 nameReview">
								<a asp-action="Details" asp-route-id="@review.Id">@review.Name</a>
								<i class="gradeReview">@review.Grade</i>
								<p class="timeReview">07.05.22 17:05</p>
							</div>
							<div class="col-6 dataReview">
								@review.Description
							</div>
							<div class="col"></div>
							<div class="col">
								<a asp-action="Edit" asp-rout-id="@review.Id" class="editReview">Edit </a>
							</div>
							<div class="col">
								<a asp-action="Delete" asp-rout-id="@review.Id" class="deleteReview">Delete</a>
							</div>
						</div>
					</div>
				</li>
				<div class="seperateReview"></div>
			}
		</ul>
		<div class="addReview">
			<button class="ButtonaddReview">Click here to add new review</button>
		</div>
	</div>
</div>





