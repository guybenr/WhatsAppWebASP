@model Data

<!-- Add icon library -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/StyleSheetHome.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



<div>
	<img class="iconStar" src=~/css/R.png />
	<span class="heading">User Rating</span>
	<p class="underHeading">Average Reating</p>
	<hr style="border:3px #f1f1f1">

	<div class="row">
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-5"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-4"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-3"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-2"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="side"></div>
		<div class="middle">
			<div class="bar-container">
				<div class="bar-1"></div>
			</div>
		</div>
		<div class="side right container">
			<div class="row row-cols-auto">
				<img class="col, ratingStar" src=~/css/R.png />
			</div>
		</div>
		<div class="average">
			@String.Format("{0:0.##}", Model.Average)
			<div class="row row-cols-auto">
				<img class="col, averageIcon" src=~/css/R.png />
                <img class="col, averageIcon" src=~/css/R.png />
                <img class="col, averageIcon" src=~/css/R.png />
                <img class="col, averageIcon" src=~/css/R.png />
                <img class="col, averageIcon" src=~/css/R.png />
            </div>
            <span class="reviews">
                Reviews
            </span>
			 <form asp-action="Search">
                    <input type="text" placeholder="Search.." name="input" class="searchBox">
                    <i type="submit" class="searchBox"><button class="fa fa-search search"></button></i>
                </form>
        </div>
        <ul class="listReviews">
			@foreach (Review review in Model.Reviews)
			{
				<li>
					<div class="container">
						<div class="row">
							<div class="col-4 detailsReview">
								<a asp-action="Details" asp-route-id="@review.Id" class="nameReview">@review.Name</a>
								<i class="gradeReview">@review.Grade</i>
								<p class="timeReview">@review.dateTime</p>
							</div>
							<div class="col-6 dataReview">
								@review.Description
							</div>
							<div class="col"></div>
							<div class="col">
								<a asp-action="Edit" asp-route-id="@review.Id" class="editReview">Edit </a>
							</div>
							<div class="col">
								<a asp-action="Delete" asp-route-id="@review.Id" class="deleteReview">Delete</a>
							</div>
						</div>
					</div>
				</li>
				<div class="seperateReview"></div>
			}
		</ul>
		<div class="addReview">
			<a asp-action="Create" class="ButtonaddReview">Click here to add new review</a>
		</div>
	</div>
</div>





